<div class="flex-10"></div>
{{paper-input 
	flex=30 
	label="name" 
	type="text"
	value=name 
	class="new-data-form__field"
	required=true
	errorMessages=(hash
    	required="Name is required."
  	)
	onChange=(action (mut name))}}
{{paper-input 
	flex=30 
	label="value" 
	type="text"
	value=value
	class="new-data-form__field"
	required=true
	errorMessages=(hash
    	required="Value is required."
  	) 
	onChange=(action (mut value))}}
<div class="flex-30 new-data-form__edit-buttons">
	{{#paper-button primary=true onClick=(action "onSaveItem") iconButton=true class="new-data-form__button flex-100"}}
        {{paper-icon "done" size=18}}
    {{/paper-button}}
    {{#paper-button warn=true onClick=(action "onCloseItem") iconButton=true class="new-data-form__button flex-100"}}
        {{paper-icon "clear" size=18}}
    {{/paper-button}}
</div>